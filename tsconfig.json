{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "outDir": "./lib"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "**/*test.ts",
    "**/__mocks__"
  ]
}
